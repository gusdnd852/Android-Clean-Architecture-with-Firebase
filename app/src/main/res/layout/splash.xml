<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="view"
            type="com.hyunwoong.sample.core.view.SplashView" />

        <variable
            name="controller"
            type="com.hyunwoong.sample.core.controller.SplashController" />

    </data>

    <FrameLayout
        onViewCreate="@{()->controller.splash()}"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_sign_in">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/card_view"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Sample App\n\n Splash"
                android:textColor="#555555"
                android:textSize="35sp"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>
</layout>