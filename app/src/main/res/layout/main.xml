<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="view"
            type="com.hyunwoong.sample.core.view.MainView" />

        <variable
            name="controller"
            type="com.hyunwoong.sample.core.controller.MainController" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_sign_in">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/card_view"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:paddingStart="100dp"
                android:paddingEnd="100dp"
                android:text="Sample App"
                android:textSize="35sp" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:paddingStart="100dp"
                android:paddingEnd="100dp"
                android:text="@{view.id}"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:paddingStart="100dp"
                android:paddingEnd="100dp"
                android:text="@{view.pw}"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:paddingStart="100dp"
                android:paddingEnd="100dp"
                android:text="@{view.name}"
                android:textSize="20sp" />


        </LinearLayout>
    </FrameLayout>
</layout>